<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>添加记录表单</title>
    <!-- Bootstrap 5.3.8 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/stylesheets/create.css">
</head>
<body>
<div class="container">
    <div class="form-container">
        <div class="card">
            <div class="card-header">
                <h2 class="mb-0"><i class="bi bi-plus-circle me-2"></i>添加记录</h2>
            </div>
            <div class="card-body">
                <div class="icon-container">
                    <div class="form-icon">
                        <i class="bi bi-journal-plus"></i>
                    </div>
                </div>

                <!-- 简化表单，直接使用原生提交 -->
                <form action="/account/create" method="post">
                    <!-- 事项 -->
                    <div class="mb-4">
                        <label for="item" class="form-label"><i class="bi bi-card-text me-2"></i>事项</label>
                        <input type="text" class="form-control" id="item" name="item" placeholder="请输入事项内容"
                               required>
                    </div>

                    <!-- 发生时间 -->
                    <div class="mb-4">
                        <label for="time" class="form-label"><i class="bi bi-calendar-event me-2"></i>发生时间</label>
                        <input type="datetime-local" class="form-control" id="time" name="time" required>
                    </div>

                    <!-- 类型 -->
                    <div class="mb-4">
                        <label for="type" class="form-label"><i class="bi bi-tag me-2"></i>类型</label>
                        <select class="form-select" id="type" name="type" required>
                            <option value="" selected disabled>请选择类型</option>
                            <option value="income">收入</option>
                            <option value="expense">支出</option>
                        </select>
                    </div>

                    <!-- 金额 -->
                    <div class="mb-4">
                        <label for="amount" class="form-label"><i
                                    class="bi bi-currency-yen me-2"></i>金额（单位：元）</label>
                        <div class="input-group">
                            <input type="number" class="form-control" id="amount" name="amount" placeholder="0.00"
                                   step="0.01" min="0" required>
                            <span class="input-group-text">元</span>
                        </div>
                    </div>

                    <!-- 备注 -->
                    <div class="mb-4">
                        <label class="form-label"><i class="bi bi-card-checklist me-2"></i>备注</label>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="important" name="important"
                                   value="true">
                            <label class="form-check-label" for="important">
                                重要事项
                            </label>
                        </div>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" id="recurring" name="recurring"
                                   value="true">
                            <label class="form-check-label" for="recurring">
                                周期性发生
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="verified" name="verified" value="true">
                            <label class="form-check-label" for="verified">
                                已核实
                            </label>
                        </div>
                    </div>

                    <!-- 添加按钮 -->
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>添加记录
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap 5.3.8 JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // 仅设置默认时间，其他交给表单自动处理
    document.addEventListener('DOMContentLoaded', function () {
        const now = new Date();
        const timeInput = document.getElementById('time');
        timeInput.value = now.toISOString().slice(0, 16);
    });
</script>
</body>
</html>